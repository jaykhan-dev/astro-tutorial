---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me!";

const identity = {
  firstName: "Jay",
  country: "Canada",
  occupation: "Copywriter",
  hobbies: ["music", "screenwriting", "Walking"],
};

const skills = ["guitar", "piano", "code", "storytelling"];

const happy = true;
const finished = true;
const goal = 3;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    I help busy entrepreneurs craft email and landing page copy using direct
    response techniques for more effective marketing campaigns.
  </p>
  <p>Some things to know about me:</p>
  <ul>
    <li>My name is {identity.firstName}</li>
    <li>I live in {identity.country} and work as a {identity.occupation}</li>

    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbie are: {identity.hobbies[0]} and {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>Skills:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning astro</p>}
  {finished && <p>I finished this tutorial</p>}
  {
    goal === 3 ? (
      <p>My goal is to finish in 3 days.</p>
    ) : (
      <p>my goal is NOT three days</p>
    )
  }
</BaseLayout>

<style>
  li {
    color: blueviolet;
  }
</style>
